---
interface Props {
  src: string;
  alt: string;
}

const { src, alt } = Astro.props;
---

<img src={src} alt={alt} />

<style lang="scss">
  img {
    width: 100%;
    max-width: 90rem;
    margin-bottom: var(--content-page-gap);
    min-height: 60rem;

    @media (max-width: 600px) {
      margin-bottom: var(--content-page-gap-mobile);
      min-height: auto;
    }
  }
</style>
