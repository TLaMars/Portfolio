---
interface Props {
  title: string;
  subtitle?: string;
  marginSize?: "title-page" | "sub-page";
}

const { title, subtitle, marginSize = "title-page" } = Astro.props;
---

<header
  class:list={[
    "header",
    {
      "title-page": marginSize === "title-page",
      "sub-page": marginSize === "sub-page"
    }
  ]}
>
  <h1 class="title" set:html={title} />
  {subtitle && <h2 class="subtitle" set:html={subtitle} />}
</header>

<style lang="scss">
  .header {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;

    &.title-page {
      margin-top: 28rem;
      margin-bottom: 28rem;

      @media (max-width: 600px) {
        margin-top: 20rem;
        margin-bottom: 20rem;
      }
    }

    &.sub-page {
      margin-top: 19.2rem;
      margin-bottom: 9.2rem;

      @media (max-width: 600px) {
        margin-top: 12rem;
        margin-bottom: 8em;
      }
    }
  }

  .title {
    color: var(--foreground);
    font-size: var(--font-size-x7l);
    margin: 0;

    @media (max-width: 600px) {
      font-size: var(--font-size-x3l);
    }

    @media (min-width: 601px) and (max-width: 900px) {
      font-size: var(--font-size-x5l);
    }
  }

  .subtitle {
    color: var(--foreground);
    font-size: var(--font-size-x2l);
    padding: 0;
    margin: 0;

    @media (max-width: 600px) {
      font-size: var(--font-size-l);
    }
  }
</style>
